@Library('vault-utils')
import com.electriccloud.vault.*


pipeline {
    agent { label 'Building_Machine' }

    environment {
        WORKSPACE = '/home/ubuntu/'
        PROJECT_DIR = '/home/ubuntu/ProjectC'
        PROJECT_FOLDER = 'ProjectC'
        PRODUCT_DOCKER_IMAGE = 'abdelatifaitbara/product'
    }

    stages {

        stage('Clone Git Repository') {
            steps {
                sh "rm -rf ${PROJECT_DIR}"
                sh "git -C ${WORKSPACE} clone -b Dev --recursive git@github.com:AbdelatifAitBara/ProjectC.git"
            }
        }

        stage('Get Secret From Vault') {

            // Import Vault Java driver
            @Grab('io.hashicorp:vault-java-driver:0.13.3') 
            import com.hashicorp.vault.api.*

            // Instantiate client and authenticate
            VaultApi vault = new VaultApi(new HttpClient(), "10.0.3.159:8200")
            vault.auth().loginByToken("MyVaultToken")

            // Lookup secret
            String secret = vault.secretsEngine("secret").readSecretVersion("secrets/creds/database_user").getData().get("value")

            // Use secret
            sh "echo $secret > secret_file"

        }

        stage('Use Secret') {
            steps {
                sh "cat secret_file | do_something"  
            }
        }

    }


    post {
        failure {
            echo "Build failed: ${currentBuild.result}"
        }
        success {
            echo "Build succeeded: ${currentBuild.result}"
        }
    }

}