@Library('vault-utils')
import com.electriccloud.vault.*


pipeline {
    agent { label 'Building_Machine' }

    environment {
        WORKSPACE = '/home/ubuntu/'
        PROJECT_DIR = '/home/ubuntu/ProjectC'
        PROJECT_FOLDER = 'ProjectC'
        PRODUCT_DOCKER_IMAGE = 'abdelatifaitbara/product'
    }

    stages {

        stage('Clone Git Repository') {
            steps {
                sh "rm -rf ${PROJECT_DIR}"
                sh "git -C ${WORKSPACE} clone -b Dev --recursive git@github.com:AbdelatifAitBara/ProjectC.git"
            }
        }

        stage('Get Secret') {
            steps {
                script {
                vault = Vault.vault(this)

                // Lookup secret
                secret = vault.secret('secrets/creds/database_user').data.username

                // Use secret value
                sh "echo $secret > secret_file"
                }
            }
        }

        stage('Use Secret') {
            steps {
                sh "cat secret_file | do_something"  
            }
        }

    }


    post {
        failure {
            echo "Build failed: ${currentBuild.result}"
        }
        success {
            echo "Build succeeded: ${currentBuild.result}"
        }
    }

}