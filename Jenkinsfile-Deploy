pipeline {
    agent { label 'Ansible_Master' }

    environment {
        PROJECT_DIR = '/home/ubuntu/ProjectC'
        PART_B_DIR = '/home/ubuntu/ProjectC/Part-B'
    }

    stages {
        stage('Clone Git Repository') {
            steps {
                sh "git -C ${PROJECT_DIR} clone --recursive git@github.com:AbdelatifAitBara/ProjectC.git"
            }
        }

        stage('Deploy The Infrastructure Part-B using Terraform') {
            steps{
                dir("/home/ubuntu/ProjectC/Part-B") { //
                    sh 'terraform init'
                }
            }
        }


    }

    post {
        failure {
            echo "Build failed: ${currentBuild.result}"
        }
        success {
            echo "Build succeeded: ${currentBuild.result}"
        }
    }
}